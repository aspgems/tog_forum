<div class="titleB"><%= I18n.t('tog_forum.views.forums.title', :forum_title => @forum.title) %>: <%= I18n.t('tog_forum.views.topics.edit_topic') %></div>
<br />

<%= error_messages_for :topic %>


<% form_for @topic, :url => forum_topic_path(@forum.id, @topic.id), :html => { :method => :put } do |f| %>
  <fieldset>
    <legend><%= I18n.t('tog_forum.views.topics.topic_details') %></legend>
    <%= render :partial => "/topics/partials/form", :locals => { :f => f } %>
    <div class="actions">
      <%= submit_tag 'Save topic', :class => "button mainaction" %>
    </div>
  </fieldset>
<% end %>
