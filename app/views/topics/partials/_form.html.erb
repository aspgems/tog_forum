<div class="fields">
  <p>
    <label for="forum_topic_title">Title</label>
    <%= f.text_field :title, :class=>"fieldbox", :size => 35 %>
  </p>
  <p>
    <label for="forum_topic_body">Body</label>
    <%= f.text_area :body, :class => 'fieldbox', :size => '60x10' %>
  </p>
  <p>
    <label for="forum_topic_sticky">Sticky?</label>
    <%= f.check_box :sticky, :class => 'fieldbox' %>
  </p>
  <p>
    <label for="forum_topic_locked">Locked?</label>
    <%= f.check_box :locked, :class => 'fieldbox' %>
  </p>
</div>
